# to find hourly pay of employees

def computepay(hours, rate ) :
    print("In computepay", hours, rate)
    if hours > 40:
        reg= rate * hours
        otp= (hours-40.0)*(rate*0.5)
        pay= reg + otp
    else:
        pay= hours*rate
    #print("Returning",pay)
    return pay

x= input("enter hours")
y= input("enter rate")
fx= float(x)
fy= float(y)
xp= computepay(fx,fy)

print ("Pay:",xp )
